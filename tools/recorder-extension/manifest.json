{
    "manifest_version": 3,
    "name": "Dora & Drizzle Recorder",
    "version": "1.1",
    "description": "Automated recorder for Drizzle Studio (with typing) and Dora Localhost (recording only).",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://demo.drizzle.studio/*",
                "http://localhost/*",
                "http://127.0.0.1/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "host_permissions": [
        "https://demo.drizzle.studio/*",
        "http://localhost/*"
    ]
}